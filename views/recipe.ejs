<%- include('header.ejs') %>

    <div id="info_box">
        <div>
            <h1>
                <%- title %>
            </h1>
        </div>
        <!-- <div>

        <p id="nobreak">Prep Time</p>
        <p id="nobreak"> Cook Time</p>

    </div> -->
        <div>
            <table id="table">
                <tr>
                    <th>Prep Time</th>
                    <th>Cook Time</th>
                    <th>Total Time</th>
                </tr>
                <tr>
                    <td>
                        <%-prep_time%> minutes
                    </td>
                    <td>
                        <%-cook_time%> minutes
                    </td>
                    <td>
                        <%-prep_time + cook_time%> minutes
                    </td>
                </tr>
            </table>
        </div>
        <div>
            <table id="table">
                <tr>
                    <th>Serving</th>
                    <th>Yield</th>
                </tr>
                <tr>
                    <td>
                        <%- servings%> serving
                    </td>
                </tr>
            </table>
        </div>
        <div>

            <h1> Ingredients</h1>

            <% if(ingredients.length> 0) { %>
                <% ingredients.forEach(ingredient=> { %>
                    <p>
                        <%- ingredient %>
                    </p>

                    <% }) %>
                        <% } else { %>
                            <p>There are no ingredients</p>
                            <% } %>
        </div>
        <span>
            <img src="images/dino.jpg" style="width: 125%">
        </span>

        <div>
            <h1>Steps</h1>
            <ul>
                <% if(steps.length> 0) { %>
                    <% steps.forEach(step=> { %>
                        <li>
                            <%- step %>
                        </li>
                        <% }) %>
                            <% } else { %>
                                <p>There are no steps</p>
                                <% } %>
            </ul>
        </div>
    </div>
    <%- include('footer.ejs') %>